{
  "manifest_version": 3,
  "name": "10Voucher",
  "version": "1.0",
  "description": "מציג שוברים מאתר תן ביס.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.10bis.co.il/*",
    "https://www.10bis.co.il/*"
  ],
  "background": {
    "service_worker": "main/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.10bis.co.il/*"
      ],
      "js": [
        "main/content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon16.png",
        "images/icon48.png",
        "images/logo-info.png",
        "libs/html2canvas.min.js",
        "libs/jsbarcode.all.min.js",
        "libs/jspdf.umd.min.js",
        "libs/svg2pdf.umd.min.js",
        "modules/barcode-renderer.js",
        "modules/pdf_logic.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    }
  }
}